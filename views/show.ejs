<!DOCTYPE html>
<html>
   <% include ../partials/head.ejs %>
  <body>
    <form>
      <div class="input-field">
        <input id="search" type="search" required>
        <label class="label-icon" for="search"><i class="material-icons">search</i></label>
        <i class="material-icons">close</i>
      </div>
    </form>
      <div class="show-card-container">
        <h1>Snackz Show Page</h1>
        <div class="center-align">
          <div class="card large">
            <div class="card-image">
              <img src="<%=snack.img%>" alt="you cannot see the snack"></br>
              <span class="card-title grey-text text-darken-4"><%=snack.snacker%></br></br></span>
            </div>
            <div class="card-content">
                Continent: <%=snack.continent%>
                Snack: <%=snack.snack%> </br>
                Description: <%=snack.description%></br>
                <!-- Snacker: <%=snack.snacker%></br> -->
              <% if (snack.like > 0) { %>
                <form action="/snackz/like/<%=snack._id;%>?_method=PUT" method="POST">
                  <input class="waves-effect waves-light btn" type="submit" value="LIKE">
                </form>
                  <% } else { %>
                  Be the first to like!
                <% } %>
              <form action="/snackz/<%=snack._id; %>?_method=DELETE" method="POST">
                <input class="waves-effect  red darken-1 btn" type="submit" value="X"/>
              </form>
              <a class="waves-effect waves-light btn-small" href="/snackz/<%=snack.id; %>/edit"><i class="material-icons left">edit</i>Edit</a>
            </div>
          </div>
      </div>
    </div>
  </body>
