   <% include ../partials/head.ejs %>
  <body>
    <form>
      <div class="input-field">
        <input id="search" type="search" required>
        <label class="label-icon" for="search"><i class="material-icons">search</i></label>
        <i class="material-icons">close</i>
      </div>
    </form>
      <div class="show-card-container">
        <h3>Snackz on Snacks</h3>
        <h5><%=snack.snacker%>'s Snackz</h5>
        <div class="center-align">
          <div class="card large">
            <div class="card-image">
              <img src="<%=snack.img%>" alt="you cannot see the snack"></br>
              <span class="card-title"><%=snack.continent%></br></br></span>
            </div>
            <div class="card-content">
                Snack: <%=snack.snack%></br>
                Description: <%=snack.description%></br>
               <i class="material-icons">thumbs_up_down</i></br>
               <i class="material-icons">reply</i>
              <form action="/snackz/<%=snack._id; %>?_method=DELETE" method="POST">
                <input class="waves-effect  red darken-1 btn" type="submit" value="X"/>
              </form>
              <a class="waves-effect yellow darken-2 btn-small" href="/snackz/<%=snack.id; %>/edit"><i class="material-icons left">edit</i>Edit</a>
            </div>
      </div>
    </div>
  </body>
